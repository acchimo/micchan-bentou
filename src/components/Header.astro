---
import HeaderLogo from "./HeaderLogo.astro";
import ButtonWrapper from "./ButtonWrapper.astro";
import GrobalNav from "./GrobalNav.astro";
import Hamburger from "./Hamburger.astro";
---

<header>
	<div class="header__inner">
		<div class="logoWrapper">

			<HeaderLogo />
		</div>
		<div class="header-right">
			<ButtonWrapper
			className="buttonContainerHeader" />
			<GrobalNav className="header" />
		</div>
		<Hamburger />
	</div>
</header>

<style>
  header {
		background-color: var(--base-color);
  }

	.header__inner{
		width: 95%;
		margin-right: auto;
		margin-left: auto;
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	.logoWrapper{
		width: 30%;
	}
	.header-right{
		width: 60%;
	}

	@media screen and (max-width: 768px) {
		.logoWrapper{
			width: 45%;
		}
.header-right{
	display: none;
}
								}


</style>
